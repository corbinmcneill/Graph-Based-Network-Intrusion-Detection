<project name="Marcov Cluster Algorithm for Network Intrusion Detection" default="main" basedir=".">

	<property name="projectName" value="mclnids" />
	<property name="src.dir" location="src" />
	<property name="build.dir" location="bin" />
	<property name="dist.dir" location="dist" />

	<path id="hadoop.jars">
		<fileset dir="/usr/local/hadoop/share/hadoop/common">
			<include name="*.jar"/>
		</fileset>
		<fileset dir="/usr/local/hadoop/share/hadoop/mapreduce">
			<include name="*.jar"/>
		</fileset>
	</path>

	<target name="compile" description="compile the source ">
		<mkdir dir="${build.dir}" />
		<javac includeantruntime="false" srcdir="${src.dir}" destdir="${build.dir}">
			<classpath refid="hadoop.jars"/>
		</javac>
	</target>

	<target name="dist" depends="compile" description="package, output to JAR">
		<mkdir dir="${dist.dir}" />
		<jar jarfile="${dist.dir}/${projectName}.jar" basedir="${build.dir}" >
		</jar>
	</target>

	<target name="clean" description="clean up">
		<delete dir="${build.dir}" />
		<delete dir="${dist.dir}" />
	</target>

	<!-- Default, run this -->
	<target name="main" depends="clean, compile, dist" />

</project>
